// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	// ---------------------------------------
	// Global settings
	// ---------------------------------------
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"git_panel": {
		"dock": "right"
	},

	// ---------------------------------------
	// UI settings
	// ---------------------------------------
	// Keymap
	"base_keymap": "VSCode",
	// Cursor
	"cursor_shape": "underline",
	// Theme & Icons
	"theme": "Zen Abyssal Blur",
	// Zed
	"ui_font_size": 12,
	"ui_font_family": "Monaspace Krypton NF",

	// ---------------------------------------
	// Editor settings
	// ---------------------------------------
	"inlay_hints": {
		"enabled": false
	},
	"format_on_save": "on",
	"current_line_highlight": "all",
	"buffer_font_size": 12,
	"buffer_font_family": "Monaspace Krypton NF",
	"buffer_font_features": {
		"liga": true,
		"clig": true,
		"dlig": true,
		"calt": true,
		"ss01": true,
		"ss02": true,
		"ss03": true
	},
	"indent_guides": {
		"line_width": 1,
		"active_line_width": 2,
		"coloring": "indent_aware"
	},

	// ---------------------------------
	// Languages
	// ---------------------------------
	"languages": {
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"JavaScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TypeScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TSX": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } },
		"Astro": { "formatter": { "language_server": { "name": "biome" } } },
		"Vue.js": { "formatter": { "language_server": { "name": "biome" } } }
	},

	// ---------------------------------
	// LLM
	// ---------------------------------
	//
	// ---------------------------------

	// ---------------------------------------
	// Terminal settings
	// ---------------------------------------
	/**
   * Linux settings
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/fish",
        "args": ["-l"]
      }
    }
  },
  */
	/**
	 * Windows settings
	 */
	"terminal": {
		"shell": {
			"with_arguments": {
				"program": "C:/Windows/System32/wsl.exe",
				"args": ["-d", "archlinux"]
			}
		}
	}
}
