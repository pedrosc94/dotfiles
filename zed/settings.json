// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	// ---------------------------------------
	// Global settings
	// ---------------------------------------
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},

	// ---------------------------------------
	// UI settings
	// ---------------------------------------
	// Keymap
	"base_keymap": "VSCode",
	// Cursor
	"cursor_shape": "underline",
	// Theme & Icons
	"theme": "Zoegi Dark",
	// Zed
	"ui_font_size": 12,
	"ui_font_family": "MonaspiceKr Nerd Font Mono",
	// Project Panel
	"project_panel": {
		"indent_guides": {
			"show": "always"
		},
		"indent_size": 10.0
	},
	// Outline Panel
	"outline_panel": {
		"indent_size": 10.0
	},
	// Git Panel
	"git_panel": {
		"dock": "right"
	},

	// ---------------------------------------
	// Editor settings
	// ---------------------------------------
	"inlay_hints": {
		"enabled": false
	},
	"format_on_save": "on",
	"hard_tabs": false,
	"current_line_highlight": "all",
	"buffer_font_size": 12,
	"buffer_font_family": "MonaspiceKr Nerd Font Mono",
	"buffer_font_features": {
		"liga": true,
		"clig": true,
		"dlig": true,
		"calt": true,
		"ss01": true,
		"ss02": true,
		"ss03": true
	},
	"indent_guides": {
		"background_coloring": "disabled",
		"line_width": 4,
		"active_line_width": 6,
		"coloring": "indent_aware"
	},

	// ---------------------------------
	// Languages & Linting & Formatting
	// ---------------------------------
	"languages": {
		"JSON": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"JSONC": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"CSS": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"Astro": {
			"formatter": { "language_server": { "name": "biome" } }
		},
		"Vue.js": {
			"formatter": { "language_server": { "name": "biome" } }
		}
	},

	// ---------------------------------
	// Agent settings
	// ---------------------------------
	"agent": {
		"always_allow_tool_actions": true,
		"default_profile": "write",
		"default_model": {
			"provider": "ollama",
			"model": "mistral:latest"
		},
		"model_parameters": []
	},

	// ---------------------------------------
	// Terminal settings
	// ---------------------------------------
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/fish",
        "args": ["-l"]
      }
    }
  },

	/**
	* Windows settings
	*
	"terminal": {
		"shell": {
			"with_arguments": {
				"program": "C:/Windows/System32/wsl.exe",
				"args": ["-d", "archlinux"]
			}
		}
	}
	*/
}
